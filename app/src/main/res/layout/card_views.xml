<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/add_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:drawableEnd="@drawable/addpurchase"
        android:text="@string/add_card"
        android:drawablePadding="10dp"
        android:padding="5dp"
        android:background="@drawable/add_card_button"
        android:layout_gravity="end"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
       />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/card_view_recycler"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:background="@android:color/white"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/empty_recyler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/card_view_recycler"
        android:layout_alignEnd="@+id/card_view_recycler"
        android:layout_marginTop="250dp"
        android:text="@string/empty_recycler"
        android:textColor="@android:color/darker_gray"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        />
</RelativeLayout>
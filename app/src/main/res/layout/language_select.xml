<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/transactionssumarry"
    android:padding="20dp"
    >

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Select Language"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:textColor="@color/text_color"
        />

    <Spinner
        android:id="@+id/language_selection_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:prompt="@string/select_language"
        />

    <Button
        android:id="@+id/confirm_language_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:layout_gravity="end"
        android:layout_marginTop="50dp"
        android:textColor="@color/white_text"
        android:textSize="15sp"
        android:background="@drawable/buttonegative"
        />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:padding="20dp"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goodbye"
        android:layout_gravity="center"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_user_inform"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        />

    <RadioGroup
        android:id="@+id/delete_user_reasons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        >
        <RadioButton android:id="@+id/radio__reason_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_reason_1"
            />
        <RadioButton android:id="@+id/radio_reason_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_reason_2"
            />
        <RadioButton android:id="@+id/radio_reason_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_reason_3"
            />
        <RadioButton android:id="@+id/radio_reason_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_reason_4"
            />
        <RadioButton android:id="@+id/radio_reason_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_reason_other"
            />
    </RadioGroup>

    <EditText
        android:id="@+id/other_reason"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:enabled="false"
        />

    <Button
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonegative"
        android:text="@string/delete"
        android:textSize="20sp"
        android:textColor="@color/white_text"
       />

</LinearLayout>
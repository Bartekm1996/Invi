<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_rowSpan="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:clickable="true"
            android:focusable="true"
            tools:srcCompat="@tools:sample/avatars"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginStart="20dp"
            android:text="@string/reg_name"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/name_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/reg_surname"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/surname_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/display_name"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_color"
            />

        <TextView
            android:id="@+id/display_name_change"
            style="@style/userProfileChangeButton"
            android:text="@string/change"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="end"
            />

        <EditText
            android:id="@+id/display_name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:padding="15dp"
            android:enabled="false"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/reg_email"
            android:textSize="15sp"
            android:textColor="@color/text_color"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/email_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:padding="15dp"
            android:enabled="false"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            />

        <TextView
            android:id="@+id/change_email"
            style="@style/userProfileChangeButton"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/change"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="@string/reg_phone"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_color"
            />

        <TextView
            android:id="@+id/phone_number_change"
            style="@style/userProfileChangeButton"
            android:layout_row="4"
            android:layout_column="1"
            android:text="@string/change"
            />

        <EditText
            android:id="@+id/phone_number_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:padding="15dp"
            android:enabled="false"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            />

    </GridLayout>






    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Social Platforms"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textColor="@color/text_color"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="20sp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:background="@color/facebook_blue"
            android:text="@string/unlink_facebook"
            android:textColor="@color/white_text" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/google_red"
            android:text="@string/unlink_google"
            android:textColor="@color/white_text"
            android:textSize="20sp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            />

    </GridLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonegative"
        android:layout_gravity="bottom"
        android:layout_marginTop="30dp"
        android:text="@string/delete_account"
        android:textColor="@color/white_text"
        android:textSize="20sp"
        />


</LinearLayout>
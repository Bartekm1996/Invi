<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignBottom="@+id/delete_user"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/display_name"
        android:layout_row="0"
        android:layout_column="0"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_color"
        />

    <TextView
        android:id="@+id/display_name_change"
        style="@style/userProfileChangeButton"
        android:text="@string/change"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="end"
        />

    <EditText
        android:id="@+id/display_name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:padding="15dp"
        android:enabled="false"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:text="@string/reg_email"
        android:textSize="15sp"
        android:textColor="@color/text_color"
        android:layout_marginTop="20dp"
        />


    <TextView
        android:id="@+id/email_verified"
        style="@style/userProfileChangeButton"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:text="@string/not_verified"
        android:textSize="12sp"
        android:textColor="@color/google_red"
        />

    <EditText
        android:id="@+id/email_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:padding="15dp"
        android:enabled="false"
        android:singleLine="true"
        android:paddingEnd="100dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color"
        />

    <TextView
        android:id="@+id/change_email"
        style="@style/userProfileChangeButton"
        android:layout_row="2"
        android:layout_column="1"
        android:text="@string/change"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:text="@string/reg_phone"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_color"
        />

    <TextView
        android:id="@+id/phone_number_change"
        style="@style/userProfileChangeButton"
        android:layout_row="4"
        android:layout_column="1"
        android:text="@string/change"
        />




    <EditText
        android:id="@+id/phone_number_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:padding="15dp"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:paddingEnd="100dp"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color" />


    <TextView
        android:id="@+id/phone_number_verified"
        style="@style/userProfileChangeButton"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:text="@string/not_verified"
        android:textSize="12sp"
        android:textColor="@color/google_red"
        />


</GridLayout>
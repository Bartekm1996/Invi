<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userprofile.UserProfile">

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:layout_weight="0.7"
            android:background="@drawable/background"
            android:gravity="center_horizontal|center_vertical">

            <RelativeLayout
                android:layout_width="371dp"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/userImage"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="139dp"
                    android:background="@drawable/profile_img"
                    android:clickable="true"
                    android:contentDescription="@string/profile_image"
                    android:focusable="true"
                    android:padding="3dp"
                    android:src="@drawable/rounded_img"
                    />


                <TextView
                    android:id="@+id/user_image_change"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="146dp"
                    android:layout_marginTop="49dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/photo_update"
                    android:textColor="@color/link_buttons"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="195dp"
                    android:layout_height="27dp"
                    android:layout_below="@+id/userImage"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/reg_name"
                    android:gravity="center"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/profile_settings_button"
                    android:layout_width="36dp"
                    android:layout_height="39dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="27dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/edit" />


            </RelativeLayout>


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imgView3"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.2"
                app:srcCompat="@drawable/profile_img" />

            <TextView
                android:id="@+id/display_name_field"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.8"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/user_name"
                android:textColor="#000"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15">

                <TextView
                    android:id="@+id/display_name_change"
                    style="@style/userProfileChangeButton"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="end"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/change" />
            </RelativeLayout>



            <EditText
                android:id="@+id/editProfileName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="test"
                tools:visibility="gone"
                tools:ignore="LabelFor" />

        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey"
            />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.2"
                app:srcCompat="@drawable/email_icon" />

            <TextView
                android:id="@+id/email_field"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.8"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/user_email"
                android:textColor="#000"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15">


                <TextView
                    android:id="@+id/change_email"
                    style="@style/userProfileChangeButton"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/change" />

                <TextView
                    android:id="@+id/email_verified"
                    style="@style/userProfileChangeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="18dp"
                    android:text="@string/not_verified"
                    android:textColor="@color/google_red"
                    android:textSize="12sp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/editProfileEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="test"
                tools:visibility="gone"
/>


        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey"
            />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.2"
                app:srcCompat="@drawable/addres" />

            <TextView
                android:id="@+id/tvProfileAddress"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.8"
                android:gravity="center_horizontal|center_vertical"
                android:text="User address"
                android:textColor="#000"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15">

                <TextView
                    android:id="@+id/change_address"
                    style="@style/userProfileChangeButton"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/change" />


            </RelativeLayout>

            <EditText
                android:id="@+id/editProfileAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="test"
                tools:visibility="gone"
 />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey"
            />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.2"
                app:srcCompat="@drawable/phone_icon" />

            <TextView
                android:id="@+id/tvProfilePhone"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.8"
                android:gravity="center_horizontal|center_vertical"
                android:text="+353874455670"
                android:textColor="#000"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15">

                <TextView
                    android:id="@+id/phone_number_change"
                    style="@style/userProfileChangeButton"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/change"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/phone_number_verified"
                    style="@style/userProfileChangeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="18dp"
                    android:text="@string/not_verified"
                    android:textColor="@color/google_red"
                    android:textSize="12sp" />

            </RelativeLayout>

            <EditText
                android:id="@+id/editProfilePhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="test"
                tools:visibility="gone"
 />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey"
            />


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/tvProfileSocial"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="Social media"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp"
                android:textStyle="bold" />

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey"
            />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <fragment
                    android:id="@+id/facebook_unlink"
                    class="com.aluminati.inventory.login.authentication.facebook.FaceBookSignIn"
                    android:layout_width="149dp"
                    android:layout_height="match_parent"

                    />


                <fragment
                    android:id="@+id/twitter_unlink_frag"
                    class="com.aluminati.inventory.login.authentication.twitter.TwitterSignIn"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    />

                <fragment
                    android:id="@+id/google_unlink"
                    class="com.aluminati.inventory.login.authentication.google.GoogleSignIn"
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey"
            />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            >

            <RelativeLayout
                android:gravity="center"
                >

                <ImageButton
                    android:id="@+id/delete_user"
                    android:layout_width="61dp"
                    android:layout_height="57dp"
                    android:src="@drawable/trash"
                    android:text="@string/delete_account"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="11dp"
                    android:textSize="20sp">

                </ImageButton>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Delete account"
                    android:textColor="@color/button_red"/>
            </RelativeLayout>


        </TableRow>


    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
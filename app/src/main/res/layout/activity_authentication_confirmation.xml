<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background_color"
    tools:context=".login.authentication.AuthenticationActivity">

    <LinearLayout
        android:id="@+id/phone_authenctication_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        >

    </LinearLayout>



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:text="@string/reg_email"
            android:textSize="15sp" />


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="@string/reg_phone"
            />


        <TextView
            android:id="@+id/phone_verified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="20dp" />


        <TextView
            android:id="@+id/email_verified"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="20dp"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/verify_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/verify_button"
            />

        <Button
            android:id="@+id/email_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="@string/verify_button"
            android:layout_gravity="center"
            />



    </GridLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center|top"
        android:layout_margin="20dp"
        >

        <Button
            android:id="@+id/continue_verify_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:enabled="false"
            android:text="@string/continue_button"
            android:textAllCaps="false"
            android:textColor="@color/white_text"
            />


        <Button
            android:id="@+id/cancel_verify_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/white_text"
            android:background="@color/google_red"
            />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:padding="10dp"
    android:background="@drawable/transactionssumarry"
    android:layout_height="200dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_check"
        android:textSize="20sp"
        android:textColor="@color/text_color"
        android:layout_gravity="center"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/item"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/price"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            />

        <com.ebanx.swipebtn.SwipeButton
            android:id="@+id/google_signin_button"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:button_background="@drawable/add_purchase_button"
            app:button_bottom_padding="20dp"
            app:button_left_padding="20dp"
            app:button_right_padding="20dp"
            app:button_top_padding="20dp"
            app:inner_text="@string/add_to_cart"
            app:inner_text_background="@drawable/google_selector"
            app:inner_text_bottom_padding="5dp"
            app:inner_text_left_padding="20dp"
            app:inner_text_color="@android:color/white"
            app:inner_text_size="15sp"
            app:inner_text_top_padding="5dp"
            />


    </GridLayout>

</LinearLayout>
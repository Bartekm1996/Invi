<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:qwerjk="http://schemas.android.com/tools">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoFocusButtonColor="@color/colorAccent"
        app:autoFocusButtonVisible="true"
        app:flashButtonColor="@color/colorAccent"
        app:flashButtonVisible="true"
        app:frameColor="@color/colorAccent"
        app:frameCornersSize="50dp"
        app:frameCornersRadius="0dp"
        app:frameAspectRatioWidth="1"
        app:frameAspectRatioHeight="1"
        app:frameSize="0.75"
        app:frameThickness="5dp"
        app:maskColor="#77000000">

    </com.budiyev.android.codescanner.CodeScannerView>


    <com.aluminati.inventory.widgets.MagicTextView
        android:id="@+id/scanner_progress_loader"
        android:textSize="40sp"
        android:textColor="#ff333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        qwerjk:strokeColor="@android:color/darker_gray"
        qwerjk:strokeJoinStyle="miter"
        qwerjk:strokeWidth="1sp"
        android:visibility="invisible"
        />


    <com.aluminati.inventory.widgets.ToggleButton
        android:id="@+id/toggleQRSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        app:toggleOffIcon="@drawable/ic_toogle_sound_on_yellow"
        app:toggleOnIcon="@drawable/ic_toogle_sound_off_yellow" />

</FrameLayout>
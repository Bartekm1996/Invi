<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:itemTextAppearance">@style/itemTextStyle.AppTheme</item>
        <item name="android:listDivider">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textFieldStyling">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:backgroundTint">@color/text_color</item>
    </style>

    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:dropDownHorizontalOffset">100dp</item>
        <item name="android:dropDownVerticalOffset">15dp</item>
    </style>

    <style name="itemTextStyle.AppTheme" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">#05437e</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="registrationFields">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="registrationEditFields">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:layout_columnSpan">2</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="registrationRequiredText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/google_red</item>
    </style>

    <style name="passwordField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:paddingEnd">100dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="passWordPrompt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/white_text</item>
    </style>

    <style name="userProfileChangeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/link_buttons</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>


    <style name="loginSocialMediaButtons">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="userProfileSocialButtons">
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:text">@string/unlink</item>
        <item name="android:textAlignment">viewStart</item>
    </style>




</resources>

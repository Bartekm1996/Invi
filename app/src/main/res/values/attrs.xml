<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FloatingTitlebar">
        <attr name="leftToggleOffIcon" format="reference" />
        <attr name="leftToggleOnIcon" format="reference" />
        <attr name="rightToggleOffIcon" format="reference" />
        <attr name="rightToggleOnIcon" format="reference" />
        <attr name="drawerReference" format="reference" />

        <attr name="searchHint" format="string" />

        <attr name="setCornerRadius" format="float" />
        <attr name="setElevation" format="float" />

        <attr name="titleText" format="string" />
<!--        <attr name="titleTextColor" format="integer" />-->
        <attr name="titleTextMinHeight" format="integer" />
    </declare-styleable>

    <declare-styleable name="ToggleButton">
        <attr name="toggleOffIcon" format="reference" />
        <attr name="toggleOnIcon" format="reference" />
        <attr name="toggleButtonWeight" format="float" />
        <attr name="toggleMode" format="boolean" />
    </declare-styleable>

        <declare-styleable name="MagicTextView">
            <attr name="innerShadowColor" format="color"/>
            <attr name="innerShadowRadius" format="dimension"/>
            <attr name="innerShadowDx" format="dimension"/>
            <attr name="innerShadowDy" format="dimension"/>

            <attr name="outerShadowColor" format="color"/>
            <attr name="outerShadowRadius" format="dimension"/>
            <attr name="outerShadowDx" format="dimension"/>
            <attr name="outerShadowDy" format="dimension"/>

            <attr name="typeface" format="string" />

            <attr name="foreground" format="reference"/>
            <attr name="background" format="reference"/>

            <attr name="strokeWidth" format="dimension" />
            <attr name="strokeMiter" format="dimension" />
            <attr name="strokeColor" format="color" />
            <attr name="strokeJoinStyle">
                <enum name="miter" value="0" />
                <enum name="bevel" value="1" />
                <enum name="round" value="2" />
            </attr>
        </declare-styleable>
</resources>